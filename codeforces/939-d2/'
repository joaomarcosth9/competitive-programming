#include <bits/stdc++.h>
using namespace std;

#ifdef LOCAL_DEBUG
#include "debug.h"
#else
#define debug(...)
#endif
#define endl '\n'
using ll = long long;

void solve() {
    int n; cin >> n;
    vector<vector<int>> a(n, vector<int> (n));
    ll sum = 0;
    vector<tuple<int, int, vector<int>>> op;
    for (int i = 1; i <= n; i++) {
        vector<int> now;
        for (int j = 1; j <= n; j++) {
            now.push_back(j);
        }
        op.push_back({1, i, now});
        iota(a[i].begin(), a[i].end(), 1);
        cout << endl;
    }
    for (int i = 1; i <= n; i++) {
        if ((ll)n * (n + 1) / 2 > (ll)i * n) {
            vector<int> now;
            for (int j = 1; j <= n; j++) {
                now.push_back(j);
            }
            op.push_back({2, i, now});
            for (int j = 0; j < n; j++) a[j][i - 1] = j + 1;
        }
    }
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            sum += a[i][j];
        }
    }
    cout << sum << " " << op.size() << endl;
}

int32_t main() {
    cin.tie(0)->sync_with_stdio(0);
    int TC; cin >> TC;
    while (TC--) {
        solve();
        /* cout << solve() << endl; */
        /* cout << (solve() ? "Yes" : "No") << endl; */
    }
}
